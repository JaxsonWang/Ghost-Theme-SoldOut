{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}


<main class="ha__main">
  <section class="ha__main-hero d-flex justify-content-center align-items-center">
    <div class="ha__main-hero-picture"></div>
    <div class="ha__main-hero-content text-center">
      <h1 class="title">{{ @site.title }}</h1>
      <div class="description">{{ @site.description }}</div>
    </div>
  </section>
  <section class="ha__main-post-list">
    <div class="container">
      <div class="ha__main-post-list-row row gy-4 mb-5">
        {{#foreach posts}}
          {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
          {{> "post-card-index"}}
        {{/foreach}}
      </div>
      <nav class="ha__main-post-nav" aria-label="Page navigation">
        <ul class="pagination justify-content-center">
          <li class="page-item">
            <a class="page-link" href="#" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
            </a>
          </li>
          <li class="page-item"><a class="page-link" href="#">1</a></li>
          <li class="page-item"><a class="page-link" href="#">2</a></li>
          <li class="page-item"><a class="page-link" href="#">3</a></li>
          <li class="page-item">
            <a class="page-link" href="#" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
            </a>
          </li>
        </ul>
      </nav>
    </div>
  </section>
  <div class="ha__main-to-top d-flex justify-content-center align-items-center flex-column shadow animated">
    <i class="fas fa-chevron-up to-top-icon"></i>
  </div>
</main>
